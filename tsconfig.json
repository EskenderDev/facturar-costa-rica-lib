{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": [
      "esnext", "dom"
    ],
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["__tests__/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*", "__tests__/stubs", "examples"],
  "exclude": ["node_modules/**/*"]
}
