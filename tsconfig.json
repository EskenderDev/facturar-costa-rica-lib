{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext", "dom"
    ],
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*"]
}
